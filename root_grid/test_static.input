[RootSystem]
InitialGrowthTime = 20 # days
EnableGrowth = false

[SoilLookup]
Weight = 10000
Power = 0.16

[Output]
PlotVanGenuchtenCurves = false
PlotTranspiration = true
PlotRootConductivities = false

[TimeLoop]
DtInitial = 7200 # [s]
TEnd = 864000 # [s] -> 7 days
MaxTimeStepSize = 3600

[Grid]
Periodic = true true false

# 37 x 5 x 150 cm
[Soil.Grid]
LowerLeft = -0.185 -0.025 -1.50
UpperRight = 0.185 0.025 0.0
Cells = 25 8 60

[Problem]
Name = test_soilroot_stomata

[StomatalBehavior]
Control = 0 #0 corresponds to interaction between chemical and pressure head regulation, and 1 corresponds to only pressure head regulation
sC = 5e+4

[RootSystem.Grid]
File = Glycine_max

[Soil.InitialConditions]
TopPressure = 9e4
BottomPressure = 9e4

[Soil.SpatialParams]
Permeability = 1.8e-11 # m^2 ==> 1.06 cm/min (http://www.csbe-scgab.ca/docs/journal/30/30_1_5_ocr.pdf)
Porosity = 0.45 # [-]

[Soil.VanGenuchten]
Alpha = 3.72e-2 # alpha from SoilHydraulicProperties.xlsx
N = 1.14 # n from SoilHydraulicProperties.xlsx

[Soil.BC.Top]
Type = 4 # atmospheric BC with surface run off

[Soil.BC.Bot]
Type = 5 # free drainage

[Climate]
Time = 0 1e10 # const value 
Precipitation = 100 # [cm/day]
#File = WeatherData.csv

[RootSystem.AxialConductivites.Order0]
#Age = 0 3 4 5 1e20 # days
#Kx = 0.01 0.3 0.3 4.3 4.3 # cm^4/hPa/day
Age = 0 1e20
Kx = 4.3 4.3

[RootSystem.AxialConductivites.Order1]
#Age = 0 3 4 5 1e20 # days
#Kx = 0.01 0.3 0.3 4.3 4.3 # cm^4/hPa/day
Age = 0 1e20
Kx = 4.3 4.3

[RootSystem.RadialConductivites.Order0]
#Age = 0 5 10 15 20 1e20 # days
#Kr = 7e-4 7e-4 5e-4 5e-4 3e-4 3e-4 # cm/hPa/day
Age = 0 1e20
Kr = 7.5e-2 7.5e-2 

[RootSystem.RadialConductivites.Order1]
#Age = 0 5 10 15 20 1e20 # days
#Kr = 7e-4 7e-4 5e-4 5e-4 3e-4 3e-4 # cm/hPa/day
Age = 0 1e20
Kr = 7.5e-2 7.5e-2

[BoundaryConditions]
InitialRootPressure = 1e5 # [Pa]
Transpiration.File = transpiration.csv #transpiration from 1 May 2013 - 1 Oct 2013

[LinearSolver]
MaxIterations = 20000

[MixedDimension]
NumCircleSegments = 20
